# --- 第一阶段: 构建 ---
FROM node:18-alpine AS builder
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

# --- 第二阶段: 运行 ---
FROM node:18-alpine
WORKDIR /app
COPY package*.json ./
RUN npm install --production
COPY --from=builder /app/dist ./dist

# 暴露端口 (Agent B 是 3001)
EXPOSE 3001

# 启动命令 (注意这里是 prod:b)
CMD ["npm", "run", "prod:b"]